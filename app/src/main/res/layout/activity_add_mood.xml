<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".AddMoodActivity">


    <TextView
        android:id="@+id/howAreYouTextView"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:text="@string/how_are_you"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pickOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/pick_one"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howAreYouTextView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addMoodNextButton"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_marginBottom="72dp"
        android:onClick="onClick"
        android:text="@string/add_mood_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addMoodBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:onClick="onClick"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/angryButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="336dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/angry_smiley"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#C61313"
        app:iconGravity="textStart"
        app:iconPadding="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/veryHappyButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/very_happy_smiley"
        android:clickable="true"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#105E14"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/happyButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/happy_smiley"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#37A62B"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTintMode="multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/unsureButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/unsure_smiley"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#30C697"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sadButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/sad_smiley"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#50BAC8"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cryingButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/crying_smiley"
        android:contentDescription="Very happy smiley button"
        android:hapticFeedbackEnabled="true"
        android:onClick="onClick"
        app:backgroundTint="#4860B8"
        app:iconGravity="textStart"
        app:iconPadding="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>